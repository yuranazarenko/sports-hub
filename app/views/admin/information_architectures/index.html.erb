<%= render partial: "admin/information_architectures/message", locals: { flash: flash }  %>
<div class="row categories_block">
  <div class="col-4">
    <ul class="nav flex-column text-center">
      <li class="nav-item pb-4">
        <button type="button" class="btn bord_dotted text-secondary" data-bs-toggle="modal" data-bs-target="#categoryBackdrop">
          + add category
        </button>
      </li>
      <%= render partial: "admin/information_architectures/categories/categories_list", locals: { categories: @categories } %>
    </ul>
    <%= render partial: "admin/information_architectures/categories/category_form" %>
    <%= render partial: "admin/information_architectures/categories/category_change_modal" %>
  </div>
  <div class="col-4">
    <ul class="nav flex-column text-center">
      <li class="nav-item pb-4">
        <button type="button" class="btn bord_dotted text-secondary" data-bs-toggle="modal" data-bs-target="#sub-categoryBackdrop">
          + add cub category
        </button>
      </li>
      <div class="tab-content justify-content-center" id="category-tabContent">
        <% @categories.each do |category| %>
          <div class="tab-pane <%= "active" if(@active_category_id == category[:id]) %>" id="category-<%= category[:id] %>" role="tabpanel" aria-labelledby="category-<%= category[:id] %>-tab">
            <%= render partial: "admin/information_architectures/sub_categories/sub_categories_list", locals: { sub_categories: category[:sub_categories] } %>
          </div>
        <% end %>
      </div>
    </ul>
    <%= render partial: "admin/information_architectures/sub_categories/sub_category_form" %>
  </div>
  <div class="col-4">
  </div>
</div>
